<div class="container">
    <section class="user-info my-5">
      <h2>Welcome, <%- user.username %>!</h2>
      <p>Your Dashboard allows you to manage your job applications and profile.</p>
    </section>
  
    <section class="job-search my-5">
      <h2>Search for Jobs</h2>
      <form action="/dashboard/search" method="get">
        <input type="text" name="job" placeholder="Search by job title">
        <input type = "text" name = "location" placeholder = "Enter Location">
        <button type="submit">Search</button>
      </form>
    </section>
  
    <section class="job-results my-5">
      <h2>Job Search Results</h2>
      <% if(jobResults){%>
        <ul>
          <% jobResults.forEach(function(job) { %>
              <li>
                  <h3><%= job.title %></h3>
                  <p><strong>Company:</strong> <%= job.company.display_name %></p>
                  <p><strong>Location:</strong> <%= job.location.display_name %></p>
                  <p><strong>Category:</strong> <%= job.category.label %></p>
                  <p><strong>Description:</strong> <%= job.description %></p>
                  <a href="<%= job.redirect_url %>" target="_blank">Apply Now</a>
              </li>
          <% }); %>
      </ul>
      <%}%>
    </section>

</div>

